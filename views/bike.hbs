{{#if bike.title}}
  <h4 class="title">{{#if bike.username}}<a href="/u/{{bike.username}}" class="no-link-color">{{bike.username}}'s</a> {{/if}}{{bike.title}}</h4>{{#if is_users_bike}}<div class="float-right edit-link-align-to-title"><a href="/edit/{{bike.id}}">Edit Bike</a></div>{{/if}}
{{/if}}
<div class="row">

    <div class="col-md-6 bike-column">
      <div class="zoom"><img class="bike-photo" src="{{s3Url}}{{bike.photo_url}}" alt="{{bike.title}}"></div>
    </div>

   <div class="col-md-6">
    {{#if bike.description}}
      <p>{{{preserve-linebreaks bike.description}}}</p>
    {{/if}}
		<dl class="row">

			{{#if bike.nickname}}
			  <dt class="col-sm-2">Name</dt>
			  <dd class="col-sm-10">{{bike.nickname}}</dd>
			{{/if}}

      {{#if bike.type}}
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">{{bike.type}}</dd>
      {{/if}}

      {{#if bike.for}}
        <dt class="col-sm-2">For</dt>
        <dd class="col-sm-10">{{bike.for}}</dd>
      {{/if}}

      {{#if bike.color}}
        <dt class="col-sm-2">Color</dt>
        <dd class="col-sm-10"><div class="color-block" style="background-color: {{bike.color}};">&nbsp;</div></dd>
      {{/if}}

      {{#if bike.manufacturer_name}}
        <dt class="col-sm-2">Brand</dt>
        <dd class="col-sm-10">{{bike.manufacturer_name}}</dd>
      {{/if}}

      {{#if bike.model_name}}
        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">{{bike.model_name}}</dd>
      {{/if}}

      {{#if bike.era}}
        <dt class="col-sm-2">Era</dt>
        <dd class="col-sm-10">{{bike.era}}</dd>
      {{/if}}

		</dl>

   </div>

</div>

   <hr>
  <br>


<script>
$(document).ready(function(){
  $('.zoom').zoom({
    url: '{{s3Url}}{{large_photo}}'
  });
});
</script>