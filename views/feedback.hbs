
<script>
  $(document).ready(function() {
    $("#postFeedback").submit(function( event ) {
      event.preventDefault();
      $.ajax({
        url: $(this).attr('action'),
        type: 'POST',
        data: $(this).serialize(),
        success: function() {
          $('footer').prepend('<div class="alert alert-warning" role="alert">Thank you for your inquiry.</div>');
          // unset form values:
          $('#email').val('');
          $('#comments').val('');
        },
        error: function(err) {
          $('footer').prepend('<div class="alert alert-danger" role="alert">Could not complete request. Please try again later.</div>');
        }
      });
    });
  });
</script>

<form class="generic-container" id="postFeedback" action="/feedback" method="post">

<h4>{{page_title}}</h4>
<p>This is a work in progress. An interest or help you have for me is appreciated.</p>
<div class="form-group">

<label for="email">Email</label><input type="email" class="form-control" id="email" name="email">

</div>


<div class="form-group">

<label for="comments">Comments</label><textarea class="form-control" id="comments" rows="5" name="comments" required></textarea>

</div>

<button type="submit" class="btn btn-primary" required>Submit</button>


</form>